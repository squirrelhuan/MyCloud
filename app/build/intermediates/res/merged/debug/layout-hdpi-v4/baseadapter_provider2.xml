        android:layout_height="wrap_content"
        android:src="@drawable/quicksearch_icon_sougou"
        />
    <TextView
        android:id="@+id/spinner_textview"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Base"
        />
</LinearLayout>