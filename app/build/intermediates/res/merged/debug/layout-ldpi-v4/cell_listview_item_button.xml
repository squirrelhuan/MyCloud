<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:background="#aaaaaa"
    android:layout_height="wrap_content" >
    <TableRow >
         
      <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:background="@color/white">

                 <ImageView
                     android:id="@+id/img"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_gravity="left"
                    android:padding="10dip"
                    android:src="@drawable/tab_settings" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="170dp"
                    android:layout_height="55dip"
                    android:layout_toRightOf="@+id/img"
                    android:layout_marginLeft="00dip"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|left"
                    android:paddingTop="6dip"
                    android:text="string/change_saveDirectory"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_enter"/>
                
                <ToggleButton
                    android:id="@+id/settings_set_javascript_toggle_btn"
                    android:layout_width="65dip"
                    android:layout_height="38dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="6dip"
                    android:layout_marginTop="6dip"
                    android:visibility="gone"
                    android:gravity="center_vertical|center_horizontal|fill"
                    android:background="@drawable/selector_butn_toggle"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />
                
                
               </RelativeLayout>
        
    </TableRow>

</TableLayout>
