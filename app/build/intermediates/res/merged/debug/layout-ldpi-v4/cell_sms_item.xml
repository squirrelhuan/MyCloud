<?xml version="1.0" encoding="utf-8"?>
     
      <RelativeLayout
               xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_margin="20dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/greenyellow">

                 <TextView android:id="@+id/laixin"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:padding="3dp"
                     android:textSize="14sp"/>
                 <TextView android:id="@+id/quxin"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="14sp"
                     android:layout_alignParentRight="true"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                 
                    android:layout_marginLeft="10dip"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/content_delete"
                    android:text="change_saveDirectory"
                    android:textSize="18sp" 
                    android:background="@color/greenyellow"/>

                <ImageView 
                    android:id="@+id/content_delete"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:onClick="oncontent_deleteClick"
                    android:src="@drawable/titlebar_stop"/>
                
                
                
               </RelativeLayout>

