<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    
	<style name="FromRightAnimation" parent="android:Animation" mce_bogus="1">        
		<item name="android:windowEnterAnimation">@anim/in_from_right</item>     
		<item name="android:windowExitAnimation">@anim/out_to_left</item>     
	</style> 
	<style name="FromBottomAnimation" parent="android:Animation" mce_bogus="1">        
		<item name="android:windowEnterAnimation">@anim/frombottom_enter</item>     
		<item name="android:windowExitAnimation">@anim/frombottom_exit</item>     
	</style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="FullBleedTheme" parent="android:Theme.Light.NoTitleBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="ActionBarTheme" parent="android:Theme.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="loading_small" parent="@android:style/Widget.ProgressBar.Small">
		<item name="android:layout_width">21dip</item> 
		<item name="android:layout_height">21dip</item>
		<item name="android:layout_gravity">center_vertical</item>
	</style>
</resources>
