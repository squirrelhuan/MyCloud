<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_music"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <ImageView android:id="@+id/music_bar4"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/music_bar4"/>
    <ImageView android:id="@+id/music_bar3"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/music_bar3"/>
    <ImageView android:id="@+id/music_bar1"
        android:layout_width="60dp"
        android:layout_height="240dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/music_bar1"/>
    <ImageView android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/music_bar2"/>
    <ImageView android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/music_left"/>
    <ImageView android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/music_right"/>

    <TextView android:id="@+id/music_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/music_bar4"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="@color/white_color"
        android:singleLine="true"
        android:text="歌曲名称" />
    <musicplayer.WordView
       android:id="@+id/text"
       android:layout_width="match_parent"
       android:layout_height="240dp"
       android:layout_below="@+id/music_name" />
    
    
</RelativeLayout>
