<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/light_grey">
     <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
        <EditText android:layout_width="fill_parent"
        android:layout_weight="2"
        android:layout_height="50dp"
        android:id="@+id/contact_number" 
        android:padding="5dp"
        android:background="@drawable/linearlayout"
        android:hint="@string/contact_number" />
        <TextView android:id="@+id/contanct_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_toLeftOf="@+id/delete_contact"
            android:layout_centerVertical="true"
            android:background="@color/greenyellow"/>
        <ImageView android:id="@+id/delete_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/titlebar_stop"/>
        </RelativeLayout>
     <ccontacts.SlidingLinearLayout  
        android:id="@+id/slidingview"  
         android:layout_width="match_parent"  
         android:layout_height="0dp"
         android:layout_weight="1" 
         android:layout_below="@+id/mycontancts" >  
   
         <ListView  
             android:id="@+id/contact_list"  
             android:layout_width="match_parent"  
             android:layout_height="match_parent"  
             android:cacheColorHint="#000000"  
             android:divider="#00000000"  
             android:fadingEdge="none"  
            android:scrollbars="none"  
             android:scrollingCache="false"  
             android:visibility="visible" />  
    </ccontacts.SlidingLinearLayout>
       
    <LinearLayout
        android:visibility="gone"
         android:id="@+id/ll_keyboard_open"
         android:orientation="vertical"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:background="#aa0000">
           
        <LinearLayout android:id="@+id/keyboard_01"
        android:orientation="horizontal"
         android:layout_width="fill_parent"
         android:layout_height="60dp" 
         android:background="#00aa00" >
           <EditText 
        android:id="@+id/phone_number"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:layout_margin="4dp"
        android:textSize="18sp"
        android:hint="@string/phonenumber"
        android:background="@drawable/linearlayout"
        android:layout_weight="1"/>
           <ImageView
        android:id="@+id/number_delete" 
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/number_delete"/>
        </LinearLayout >
 
        <TableLayout android:layout_width="fill_parent"
           android:layout_height="wrap_content">
           <TableRow android:layout_width="fill_parent"
               android:layout_height="wrap_content">
               <ImageView
        android:id="@+id/number_01" 
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:src="@drawable/iv_phone_keyboard_number01"/>
           <ImageView
        android:id="@+id/number_02" 
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:src="@drawable/iv_phone_keyboard_number02"/>
           <ImageView
        android:id="@+id/number_03" 
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:src="@drawable/iv_phone_keyboard_number03"/>
           </TableRow>
           <TableRow android:layout_width="fill_parent"
               android:layout_height="wrap_content">
           <ImageView
        android:id="@+id/number_04" 
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:src="@drawable/iv_phone_keyboard_number04"/>
           <ImageView
        android:id="@+id/number_05" 
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:src="@drawable/iv_phone_keyboard_number05"/>
           <ImageView
        android:id="@+id/number_06" 
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:src="@drawable/iv_phone_keyboard_number06"/>
           </TableRow>
       <TableRow android:layout_width="fill_parent"
            android:layout_height="wrap_content">
           <ImageView
        android:id="@+id/number_07" 
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:src="@drawable/iv_phone_keyboard_number07"/>
           <ImageView
        android:id="@+id/number_08" 
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:src="@drawable/iv_phone_keyboard_number08"/>
           <ImageView
        android:id="@+id/number_09" 
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:src="@drawable/iv_phone_keyboard_number09"/>
           </TableRow>
        <TableRow android:layout_width="fill_parent"
        android:layout_height="wrap_content">
       <ImageView
        android:id="@+id/number_010" 
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:src="@drawable/iv_phone_keyboard_number010"/>
           <ImageView
        android:id="@+id/number_00" 
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:src="@drawable/iv_phone_keyboard_number00"/>
           <ImageView
        android:id="@+id/number_011" 
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:src="@drawable/iv_phone_keyboard_number011"/>
       </TableRow>
       <TableRow android:layout_width="fill_parent"
               android:layout_height="wrap_content">
       <ImageView
        android:id="@+id/ic_keyboard_contactrencent_open" 
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:src="@drawable/ic_contactrencent_open"/>

           <ImageView
               android:id="@+id/ic_phone_call"
               android:layout_width="wrap_content"
               android:layout_height="60dp"
               android:layout_weight="1"
               android:src="@drawable/ic_phone_call" />

           <ImageView
        android:id="@+id/ic_phonekeyboard_close" 
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:src="@drawable/ic_phonekeyboard_close"/>
           </TableRow>
       </TableLayout>
    </LinearLayout>
         <LinearLayout android:id="@+id/keyboard_04"
        android:orientation="horizontal"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content" 
         android:background="#aa0000">
           <ImageView
        android:id="@+id/ic_contactrencent_open" 
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:src="@drawable/ic_contactrencent_open"/>
           <ImageView
        android:id="@+id/ic_phonecontact_open" 
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:src="@drawable/ic_phonecontact_open"/>
           <ImageView
        android:id="@+id/ic_phonekeyboard_open" 
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:src="@drawable/ic_phonekeyboard_open"/>
       </LinearLayout >

</LinearLayout>
