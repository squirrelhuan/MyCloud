<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:id="@+id/background" 
    android:background="#FFFFFF" android:layout_width="match_parent" android:orientation="vertical">
    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:text="@string/myTV" android:textSize="12pt" android:id="@+id/textView1"></TextView>
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/text1" android:text="@string/text1" android:layout_weight="1" android:textColor="#000000"></TextView>
        <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="EditText" android:id="@+id/edit1" android:layout_weight="4"></EditText>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/text2" android:text="@string/text2" android:textColor="#000000"></TextView>
        <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="EditText" android:layout_weight="4" android:id="@+id/edit2"></EditText>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/text3" android:id="@+id/text3" android:textColor="#000000"></TextView>
        <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="EditText" android:layout_weight="4" android:id="@+id/edit3"></EditText>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout2" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/button1" android:text="@string/strbt1" android:layout_width="wrap_content" android:layout_height="match_parent"></Button>
        <Button android:id="@+id/button2" android:layout_width="wrap_content" android:text="@string/strbtn2" android:layout_height="match_parent"></Button>
        <Button android:id="@+id/button3" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/strbt3"></Button>
        <Button android:id="@+id/button4" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/strbtn4"></Button>
    </LinearLayout>
    <EditText android:scrollHorizontally="true" android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/editText1" android:text="@string/app_name"></EditText>
 
    <ListView android:id="@+id/sms_lv"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:divider="#00000000"
        android:dividerHeight="8dp"
        android:background="@drawable/linearlayout"
        android:orientation="horizontal">
  
     </ListView>
</LinearLayout>
